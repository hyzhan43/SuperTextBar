<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhan.core.SuperTextBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/ic_love"
        app:leftText="@string/collect"
        app:padding="10dp"
        app:rightIcon="@drawable/ic_arrow"
        app:showBottomLine="true" />

    <com.zhan.core.SuperTextBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/ic_sex"
        app:leftText="@string/sex"
        app:padding="10dp"
        app:rightIcon="@drawable/ic_arrow"
        app:rightText="ç”·"
        app:showBottomLine="true" />

    <com.zhan.core.SuperTextBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftText="@string/task_center"
        app:padding="10dp"
        app:rightIcon="@drawable/ic_arrow"
        app:showBottomLine="true" />


    <com.zhan.core.SuperTextBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:leftText="@string/task_center"
        app:padding="10dp"
        app:rightIcon="@drawable/ic_arrow"
        app:showTopLine="true"
        app:showBottomLine="true" />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/things"
                android:textColor="@android:color/black" />

            <com.zhan.core.SuperTextBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentText="@string/blue_color"
                app:leftText="@string/beat_studio"
                app:leftTextStyle="italic"
                app:padding="10dp"
                app:rightText="@string/number"
                app:showBottomLine="true"
                app:textStyle="bold" />

            <com.zhan.core.SuperTextBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentGravity="center"
                app:contentText="@string/white_color"
                app:leftText="@string/air_pods"
                app:leftTextSize="10sp"
                app:padding="10dp"
                app:rightText="@string/number"
                app:rightTextSize="20sp"
                app:showBottomLine="true" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>